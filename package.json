{
  "name": "streamgrid",
  "version": "1.2.3",
  "description": "A high-performance multi-stream viewer application for watching multiple live streams simultaneously in customizable grid layouts",
  "main": "./out/main/index.js",
  "author": {
    "name": "LordKnish",
    "email": "support@streamgrid.app"
  },
  "homepage": "https://github.com/LordKnish/StreamGrid",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LordKnish/StreamGrid.git"
  },
  "keywords": [
    "electron",
    "streaming",
    "multi-stream",
    "twitch",
    "youtube",
    "grid-layout",
    "video-player",
    "live-streaming"
  ],
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "dist:mac:x64": "npm run build && electron-builder --mac dmg zip --x64",
    "dist:mac:arm64": "npm run build && electron-builder --mac dmg zip --arm64",
    "dist:win": "npm run build && electron-builder --win nsis --x64",
    "dist:linux": "npm run build && electron-builder --linux AppImage deb --x64",
    "build:unpack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.1",
    "@mui/material": "^6.4.1",
    "@types/express": "^5.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/lodash": "^4.17.20",
    "@types/uuid": "^10.0.0",
    "comlink": "^4.4.2",
    "compare-versions": "^6.1.1",
    "dashjs": "^4.7.4",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.1.7",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "hls.js": "^1.5.20",
    "jdenticon": "^3.3.0",
    "lodash": "^4.17.21",
    "react-grid-layout": "^1.5.0",
    "react-hook-form": "^7.54.2",
    "react-player": "^2.16.0",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "screenfull": "^6.0.2",
    "uuid": "^11.0.5",
    "web-vitals": "^5.1.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^3.2.4",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "terser": "^5.43.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "io.streamgrid.app",
    "productName": "StreamGrid",
    "files": [
      "out/",
      "resources/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "asar": true,
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "icon": "build/icons/icon.icns"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Video",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "icon": "build/icons",
      "compression": "normal",
      "executableArgs": [
        "--no-sandbox"
      ],
      "maintainer": "LordKnish <support@streamgrid.app>"
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1",
        "libsecret-1-0"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "LordKnish",
        "repo": "StreamGrid",
        "releaseType": "release"
      }
    ]
  }
}
